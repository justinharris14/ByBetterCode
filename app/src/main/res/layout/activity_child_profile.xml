<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/md_theme_background">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:padding="14dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/childPhoto"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:contentDescription="photo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_rounded"/>

                <LinearLayout android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView android:id="@+id/childName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child Name"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView android:id="@+id/childDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOB: 2019-01-01"
                        android:layout_marginTop="6dp"/>

                    <TextView android:id="@+id/childTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Ms. Smith"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/muted"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Description" android:textStyle="bold" android:layout_marginTop="12dp"/>

        <TextView android:id="@+id/childDescription" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Short description" android:layout_marginTop="4dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Allergies:" android:textStyle="bold" android:layout_marginTop="10dp"/>
        <TextView android:id="@+id/childAllergies" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="None"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Medical History:" android:textStyle="bold" android:layout_marginTop="10dp"/>
        <TextView android:id="@+id/childMedicalHistory" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="None" android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:backgroundTint="@color/md_theme_primary"/>
    </LinearLayout>
</ScrollView>
